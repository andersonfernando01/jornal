<section class="container">
    <hr>
    <h2>Lista de publicações</h2>
    
    <hr> 

    <table class="table table-bordered">

        <thead>
            <th>ID</th>
            <th>TíTULO</th>
            <th>SLUG</th>
            <th>CATEGORIA</th>
            <th>ACÇÕES</th>
        </thead>
        <tbody>
        
            <% articles.forEach(artigos=>{ %>
                <tr>
                    <th><%=artigos.id%></th>
                    <th><%=artigos.title %></th>
                    <th><%=artigos.slug%></th>
                    <th><%=artigos.categoria.title %></th>
                    <th>
                            <a href="/admin/articles/edit/<%=artigos.id%>" class="btn btn-warning mb-2">Editar</a>
                            <!--
                            <form action="/articles/delete" method="post" style="display: inline;" onsubmit="confirmacaoform(event,this)">
                                <input type="text" name="id" hidden value="<%= artigos.id%>">
                                <button type="submit" class="btn btn-danger">Apagar</button>
                            </form>
                            -->
                           
                    </th>
                </tr>
           <% })%> 
            
        </tbody>
    </table>
</section>
</body> 
