<%- include('../../partiels/header.ejs'); -%>

<section class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              
              
                <img src="../../../image/git/login.gif" alt="" class="col-lg-6 d-none d-lg-block">
              

          
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Seja Bem-vindo !</h1>
                  </div>
                  <form class="user" action="/authenticate" method="post">
                    <div class="form-group">
                      <%=loginError%>
                      <input type="email" class="form-control form-control-user" name="email" aria-describedby="emailHelp" placeholder="Seu Email" value="<%=email%>">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control form-control-user" name="password" placeholder="Palavra-passe" value="<%=password%>">
                    </div>
                    
                    <button class="btn btn-primary btn-user btn-block">login</button>
                    <hr>
                   
                    
                  </form>
                  
                  <div class="text-center">
                    <a class="small" href="forgot-password.html">Esqueceu a sua palavra-passe?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="/admin/user/create">Cria uma conta!</a>
                  </div>
                  <hr>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </section>
<% - include('../../partiels/footer.ejs');-%>